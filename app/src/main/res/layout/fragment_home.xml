<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="32dp">

        <!-- Иконка уведомлений -->
        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_notification"
            app:tint="@color/primaryOrange"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Большая синяя карточка -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardUserInfo"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/primaryBlue"
            app:cardCornerRadius="32dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivNotification">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">

                <!-- Аватар -->
                <View
                    android:id="@+id/viewAvatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@color/cardWhite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- ФИО -->
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="Лопухов Валентин Сергеевич"
                    android:textColor="@color/cardWhite"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/viewAvatar"
                    app:layout_constraintTop_toTopOf="@id/viewAvatar" />

                <!-- Авто -->
                <TextView
                    android:id="@+id/tvCar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Mercedes-Benz"
                    android:textColor="@color/cardWhite"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvUserName"
                    app:layout_constraintTop_toBottomOf="@id/tvUserName" />

                <!-- Номер -->
                <TextView
                    android:id="@+id/tvCarNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="07770074"
                    android:textColor="@color/cardWhite"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvCar"
                    app:layout_constraintTop_toBottomOf="@id/tvCar" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Блок 'осталось часов' -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHoursLeft"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="12dp"
            app:cardBackgroundColor="@color/cardWhite"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/cardUserInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardEmpty">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="вы накатали"
                    android:textSize="14sp"
                    android:textColor="@color/textGrey" />

                <TextView
                    android:id="@+id/tvHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48"
                    android:textSize="68sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryOrange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="часов"
                    android:textSize="14sp"
                    android:textColor="@color/textGrey" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Пустой блок справа -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardEmpty"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="28dp"
            android:layout_marginStart="12dp"
            app:cardBackgroundColor="@color/cardWhite"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/cardUserInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardHoursLeft" />

        <!-- Заголовок 'Предстоящие записи' -->
        <TextView
            android:id="@+id/tvUpcomingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Предстоящие записи"
            android:textColor="@color/textBlack"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cardHoursLeft"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Список записей -->
        <LinearLayout
            android:id="@+id/layoutUpcomingList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvUpcomingTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Карточка записи -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/cardWhite"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ПН, 19.03"
                        android:textColor="@color/primaryBlue"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00–12:30"
                        android:textColor="@color/primaryBlue"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- копии ещё двух карточек — по тому же шаблону -->

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
