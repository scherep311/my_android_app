<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundApp">

    <!-- Кнопка редактирования -->
    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit"
        app:tint="@color/primaryOrange"
        android:elevation="20dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:paddingTop="70dp"
            android:paddingBottom="110dp">

            <!-- Аватар -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_avatar_circle"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:scaleType="centerInside"
                    android:contentDescription="Аватар" />


            </FrameLayout>

            <TextView
                android:id="@+id/btnPickAvatar"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:gravity="center"
                android:text="Изменить фото"
                android:textColor="@color/cardWhite"
                android:textSize="12sp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_change_photo_button"
                android:visibility="gone"/>


            <!-- Имя -->
            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="Василий Гудков"
                android:textColor="@color/textBlack"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Телефон -->
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="+79028900111"
                android:textColor="@color/textBlack"
                android:alpha="0.45"
                android:textSize="18sp" />

            <!-- EMAIL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="13sp"
                android:textColor="@color/textBlack"
                android:alpha="0.55"
                android:layout_marginTop="14dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_profile_field"
                android:inputType="textEmailAddress"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:singleLine="true"
                android:textColor="@color/textBlack" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:alpha="0.55"
                android:text="ИНН"
                android:textColor="@color/textBlack"
                android:textSize="13sp" />



            <EditText
                android:id="@+id/etInn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_profile_field"
                android:inputType="number"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:alpha="0.55"
                android:text="Город"
                android:textColor="@color/textBlack"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_profile_field"
                android:inputType="textCapSentences"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:singleLine="true" />


            <!-- АДРЕС -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:alpha="0.55"
                android:text="Адрес"
                android:textColor="@color/textBlack"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_profile_field"
                android:inputType="textCapSentences"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:singleLine="true" />




        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
