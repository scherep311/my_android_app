<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundApp">

    <!-- Карточка календаря -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCalendar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Заголовок месяца + стрелки -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnPrevMonth"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="@color/primaryBlue" />

                <TextView
                    android:id="@+id/tvMonth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Август"
                    android:textColor="@color/textBlack"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnNextMonth"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/primaryBlue" />
            </LinearLayout>

            <!-- Дни недели -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView style="@style/WeekDayLabel" android:text="пн"/>
                <TextView style="@style/WeekDayLabel" android:text="вт"/>
                <TextView style="@style/WeekDayLabel" android:text="ср"/>
                <TextView style="@style/WeekDayLabel" android:text="чт"/>
                <TextView style="@style/WeekDayLabel" android:text="пт"/>
                <TextView style="@style/WeekDayLabel" android:text="сб"/>
                <TextView style="@style/WeekDayLabel" android:text="вс"/>
            </LinearLayout>

            <!-- Календарь -->
            <com.kizitonwose.calendar.view.CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cv_dayViewResource="@layout/item_calendar_day"
                app:cv_outDateStyle="endOfGrid" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Заголовок доступного времени -->
    <TextView
        android:id="@+id/tvAvailable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Доступное время"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/textBlack"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardCalendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Карточка со слотами времени -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSlots"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvAvailable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="16dp"
            android:paddingBottom="18dp"
            android:clipToPadding="false"
            android:overScrollMode="never" />

    </androidx.cardview.widget.CardView>

    <!-- Кнопка записаться -->
    <Button
        android:id="@+id/btnBook"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_button_orange"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:elevation="6dp"
        android:text="ЗАПИСАТЬСЯ"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/cardWhite"
        app:layout_constraintTop_toBottomOf="@id/cardSlots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
